#!/bin/bash
if [ "$#" -lt 1 ]; then
  echo "Usage: $0 <input.cpp> [output]"
  exit 1
fi

input_file=$1

if [ "$#" -eq 2 ]; then
  output_file=$2
else
  output_file="${input_file%.cpp}"
fi

IFNPLUGIN_PATH=/home/zlin/app/IFNPlugin
GHSPLUGIN_PATH=/home/zlin/app/GHSAlgo
g++ "$input_file" \
    -I"$HOME/.local/include" \
    -I"$IFNPLUGIN_PATH" \
    -L"$IFNPLUGIN_PATH" \
    -I"$GHSPLUGIN_PATH" \
    -L"$GHSPLUGIN_PATH" \
    -L"$HOME/.local/lib" \
    -lRecursiveTools \
    -lIFNPlugin \
    -lGHSAlgo\
    $(root-config --cflags --ldflags --glibs) \
    $(fastjet-config --cxxflags --libs --plugins) \
    -o "$output_file"

if [ $? -ne 0 ]; then
  echo "Compilation failed. Exiting."
  exit 1
fi

echo "Compilation succeeded. Output file: $output_file"